rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload their profile photos
    match /profile-photos/{filename} {
      allow read: if true; // Anyone can read profile photos
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
